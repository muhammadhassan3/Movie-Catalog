<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/container1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="1dp"
        android:elevation="@dimen/cardview_default_elevation"
        style="@style/Widget.MaterialComponents.CardView">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                style="@style/MovieCatalog.TextView.Large"
                android:maxLines="2"
                android:ellipsize="end"
                android:background="@color/grey"
                android:textStyle="bold"
                android:id="@+id/tv1"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="150dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/img1"
                app:layout_constraintHorizontal_bias="0"
                app:round="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/grey"
                app:layout_constraintVertical_bias="0"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/img1"
                app:layout_constraintStart_toEndOf="@id/img1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="8dp"
                android:id="@+id/tv2"
                style="@style/MovieCatalog.TextView.Medium"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                app:layout_constraintStart_toEndOf="@id/img1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="8dp"
                android:id="@+id/tv3"
                style="@style/MovieCatalog.TextView"
                android:background="@color/grey"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv3"
                app:layout_constraintStart_toEndOf="@id/img1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:background="@color/grey"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:id="@+id/tv4"
                android:layout_marginTop="8dp"
                style="@style/MovieCatalog.TextView.Medium"/>
            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv4"
                app:layout_constraintStart_toEndOf="@id/img1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:id="@+id/chip1"
                style="@style/Widget.MaterialComponents.ChipGroup">
                <com.google.android.material.chip.Chip
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:chipBackgroundColor="@color/grey" />
                <com.google.android.material.chip.Chip
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:chipBackgroundColor="@color/grey" />
                <com.google.android.material.chip.Chip
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:chipBackgroundColor="@color/grey" />
                <com.google.android.material.chip.Chip
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    app:chipBackgroundColor="@color/grey" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/chip1"
                app:layout_constraintStart_toEndOf="@id/img1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="8dp"
                android:id="@+id/tv5"
                android:layout_marginTop="8dp"
                android:background="@color/grey"
                style="@style/MovieCatalog.TextView.Medium"/>
            <androidx.appcompat.widget.AppCompatRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv5"
                app:layout_constraintStart_toEndOf="@id/img1"
                app:layout_constraintEnd_toEndOf="parent"
                android:numStars="5"
                app:flow_wrapMode="aligned"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:isIndicator="true"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/star"
                android:rating="5"
                android:layout_marginTop="8dp"
                android:progressTint="@color/grey"
                android:secondaryProgressTint="@android:color/darker_gray"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/star"
                app:layout_constraintBottom_toBottomOf="@id/star"
                app:layout_constraintStart_toEndOf="@id/star"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/grey"
                android:padding="4dp"
                android:id="@+id/tv6"
                app:roundPercent="1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/container1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/container2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="1dp"
        android:elevation="@dimen/cardview_default_elevation"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>