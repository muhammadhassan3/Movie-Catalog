<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieCatalog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/quicksand</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MovieCatalog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MovieCatalog.PopUpOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MovieCatalog.TextView.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MovieCatalog.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MovieCatalog.TextView.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MovieCatalog.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextColor">@color/black_40</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="indicatorColor">@color/black</item>
    </style>

    <style name="MovieCatalog.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MovieCatalog.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.MovieCatalog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieCatalog.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>